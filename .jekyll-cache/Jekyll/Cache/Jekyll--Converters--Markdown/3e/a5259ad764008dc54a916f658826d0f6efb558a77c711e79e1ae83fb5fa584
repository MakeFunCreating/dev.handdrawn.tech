<script src="https://player.vimeo.com/api/player.js"></script>

<script type="text/plain" data-consent="analytics">

	// Cookiehub - blocks vimeo embed until analytic cookies allowed

	var tag = document.createElement('iframe');
	tag.src = "https://player.vimeo.com/video/481630637?controls=0";
	tag.width = 640;
	tag.height = 360;
	tag.frameBorder = 0;
	tag.allow = "autoplay";
	tag.setAttribute('webkitallowfullscreen', '');
	tag.setAttribute('mozallowfullscreen', '');	
	tag.setAttribute('allowfullscreen', '');
	
	var el = document.getElementById('vimeo-player123');
	el.appendChild(tag);
	
	// Change id to remove test pattern when cookies allowed
	
	if ( document.getElementById("testPatternBg123").id  !== null ) {
		var videoBox123 = document.getElementById("testPatternBg123");
		videoBox123.style.background = "none";
		$('#videoPlayBtn123').fadeIn(400);
	}

	// Vimeo player controls
	const iframe123 = $('#vimeo-player123 iframe');
    const player123 = new Vimeo.Player(iframe123);

    // Events: When video starts playing
    player123.on('play', function() {
        $('#videoPlayBtn123').fadeOut(10);
    	$('#videoPauseBtn123').css('cursor', 'pointer');
    });

    // Events: When video ended
    player123.on('ended', function() {
        $('#videoPlayBtn123').fadeIn(400);
    });

    // Events: When video paused
    player123.on('pause', function() {
    	// Re-set hover classes
		$('#videoPlayBtn123').hover(function(){
		  $(this).css("background-color", '#eb2a85');
		  }, function(){
		  $(this).css("background-color", '#373737');
		});
    	$('#videoPlayBtn123').fadeIn(10);
    	$('#videoPauseBtn123').css('cursor', 'default');
    });

    // Methods: Play video when play button clicked
    $('#videoPlayBtn123').click(function() {
    	player123.play();
    	$('#videoPlayBtn123').css('background-color', '#373737');
	});

    // Methods: Pause video when pause button clicked
    $('#videoPauseBtn123').click(function() {
    	player123.pause();
	});

</script>







              


            </div>
          

